<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_container"
    hardwareAccelerated="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Theme.Cleaningplanandroidclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/task_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/textview_margin"
            android:gravity="center_vertical|left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/cardview_margin"
                    android:gravity="center_vertical|left"
                    android:layout_weight="10"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/subtitle_size" />

                <TextView
                    android:id="@+id/task_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/cardview_margin"
                    android:textSize="@dimen/normale_text"/>
            </LinearLayout>


            <TextView
                android:id="@+id/task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/cardview_margin"
                android:layout_marginVertical="@dimen/minimal_margin"
                android:textSize="@dimen/normale_text" />

            <TextView
                android:id="@+id/task_roommate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardview_margin"
                android:layout_marginRight="@dimen/cardview_margin"
                android:layout_marginBottom="@dimen/cardview_margin" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>